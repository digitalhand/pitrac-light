{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run PiTrac (Debug build)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/build/debug/pitrac_lm",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${workspaceFolder}/src/build/debug"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "meson build (debug)"
    },
    {
      "name": "Run PiTrac (Release build)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/build/release/pitrac_lm",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/src",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${workspaceFolder}/src/build/release"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "meson build (release)"
    }
  ]
}
